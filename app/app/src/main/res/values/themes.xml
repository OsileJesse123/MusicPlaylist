<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlaylist" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_purple</item>
        <item name="colorPrimaryVariant">@color/background_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/bright_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bright_purple</item>
        <item name="colorSecondaryVariant">@color/bright_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:windowBackground">@color/background_purple</item>
        <item name="android:navigationBarColor">@color/light_background_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Fab_Style" parent="Theme.AppCompat.DayNight">
        <item name="colorSecondary">@color/bright_purple</item>
        <item name="colorSecondaryVariant">@color/bright_purple</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>